{% extends 'base-bootstrap-sans-footer.html.twig' %}

{% block title %}Contact{% endblock %}


    {% block banner %}
        <img src="{{ asset('build/images/banner_accueil.png') }}" alt="banner" class="banner h-75">
    {% endblock %}


    {% block body %}
        <div class="container d-flex justify-content-center">
            {{ form_start(form) }}
            <div class="form-group row d-flex justify-content-start">
                <div class="form-group-contact col-6">
                    {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'text-dark mr-4'}}) }}
                </div>
                <div class="form-group-contact col-6">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'text-dark mr-4'}}) }}
                </div>
            </div>
            <div class="form-group row d-flex justify-content-start">
                <div class="form-group-contact col-6 form-inline">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control-lg w-100'}}) }}
                </div>
                <div class="form-group-contact col-6 form-inline">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control-lg w-100'}}) }}
                </div>
            </div>
            <div class="form-group row d-flex justify-content-start">
                <div class="form-group-contact col-12 mt-4">
                    {{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'text-dark mr-3'}}) }}
                </div>
            </div>
            <div class="form-group row d-flex justify-content-start">
                <div class="form-group-contact col-12">
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control-lg w-100'}}) }}
                </div>
            </div>
            <div class="form-group row d-flex justify-content-start mt-3">
                <div class="form-group-contact col-12 d-block">
                    {{ form_label(form.text, 'Message', {'label_attr': {'class': 'mr-4 text-dark py-2 '}}) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group-contact col-12">
                    {{ form_widget(form.text, {'attr': {'class': 'w-100'}}) }}
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <button class="btn btn-lg btn-info btn-block text-dark font-weight-bold" type="submit">{{ button_label|default('Envoyer') }}</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>

    {% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Correspondance index{% endblock %}

{% block body %}
    <h1>Correspondance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ExerciceId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for correspondance in correspondances %}
            <tr>
                <td>{{ correspondance.id }}</td>
                <td>{{ correspondance.exerciceId }}</td>
                <td>
                    <a href="{{ path('correspondance_show', {'id': correspondance.id}) }}">show</a>
                    <a href="{{ path('correspondance_edit', {'id': correspondance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('correspondance_new') }}">Create new</a>
{% endblock %}
